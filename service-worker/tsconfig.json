{
  "compilerOptions": {
    "target": "es2017",
    // Required for buffer-pipe
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2017", "ES2020", "DOM", "ScriptHost", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./lib/esm",
    "rootDir": "."
  },
  "include": ["src/**/*.ts"],
  "resolveJsonModule": true,
  "exclude": ["src/**/*.test.ts", "src/mocks/*"]
}
